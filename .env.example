# Binance Collector Configuration
# Copy this file to .env and fill in your values

# Remote collector connection (for pulling data)
BINANCE_COLLECTOR_HOST=your.remote.host.or.ip
BINANCE_COLLECTOR_USER=root
BINANCE_COLLECTOR_SSH_KEY=~/.ssh/id_rsa
BINANCE_COLLECTOR_PATH=/root/crypto_data

# API Server configuration (if using REST API instead of SCP)
BINANCE_COLLECTOR_API_URL=http://your.remote.host.or.ip:8000
BINANCE_COLLECTOR_API_KEY=your-secret-key-here

# Local storage paths
BINANCE_COLLECTOR_LIVE_PATH=artifacts/live
BINANCE_COLLECTOR_HISTORICAL_PATH=artifacts/historical
